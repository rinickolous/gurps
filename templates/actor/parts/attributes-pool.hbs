{{#each attributesPool}}
  <section class='element pool' data-id='{{this.id}}'>
    <header>{{this.title}}</header>
    <div class='flexrow'>
      <div class='spinner flexrow'>
        <button class='fa-solid fa-minus' data-action='pool-decrease'></button>
        <input type='number' value='{{this.current}}' />
        <button class='fa-solid fa-plus' data-action='pool-increase'></button>
      </div>
      <button class='fa-solid fa-rotate-left' data-action='pool-reset'></button>
    </div>
  </section>
{{/each}}
